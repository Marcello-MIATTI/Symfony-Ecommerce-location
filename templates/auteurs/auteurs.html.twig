{% extends "layout.html.twig" %}

{% block title %} {{ parent() }} - auteurs {% endblock %}

{% block content %}
        <h2>liste des Auteurs : </h2>

        <table class="table text-center">
            <thead class="thead-dark">
                <tr>
                    <th>nom</th>
                    <th>prenom</th>
                    <th>date de naissance</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for auteur in auteurs %}     
                    <tr>
                        <td>{{ auteur.nom }}</td>
                        <td>{{ auteur.prenom }}</td>
                        <td>{{ auteur.dateDeNaissance | date("d/m/Y") }}</td>
                        <td>
                            <a href="{{ path("unAuteur", {id: auteur.id} ) }}"><i class="fas fa-eye mx-1"></i></a>
                            <a href="{{ path("update_auteur", {id: auteur.id} ) }}"><i class="fas fa-edit mx-1 text-success"></i></a>
                            <a href="{{ path("delete_auteur", {id: auteur.id} ) }}"><i class="fas fa-trash mx-1 text-danger" onclick="return confirm('êtes vous sûr de vouloir supprimer l\'auteur ?') " ></i></a>
                            
                        </td>
                    </tr>
                {% endfor %}
            </tbody>

        </table>
{% endblock content %}